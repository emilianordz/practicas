<%- include("partials/head") %>

    <title>Registra tu cuenta</title>
    </head>

    <body>
        <%- include ("partials/navbar") %>

            <div class="container">
                <div class="signup-box">
                    <div class="col-1">
                        <img src="/images/image.png">
                    </div>
                    <div class="col-2">
                        <h2>Empecemos hoy</h2>
                        <span>Ya estas registrado? <a href="login">Inicia Sesion</a></span>
                        <a href="googlelog" class="google-link">
                            <img src="/images/google.png">Continuar con Google</a>
                        <h4>O tambien</h4>

                        <form action="" method="post">
                            <label>Elija su nombre de usuario</label>
                            <input type="text" name="username" placeholder="Escriba su nombre de usuario" class="input-field">
                                <p class="error" id="error"></p>
                            <% if (locals.errors?.username) { %>
                                <div class = "register-error-message"><%= errors.username.msg %></div>
                                <% } %>

                            <label>Registre su casilla de Mail</label>
                            <input type="email" name="email" placeholder="Ingrese su E-Mail" class="input-field">
                            <% if (locals.errors?.email) { %>
                                <div class = "register-error-message"><%= errors.email.msg %></div>
                                <% } %>

                            <label>Cree su Contraseña</label>
                            <input type="password" name="password" placeholder="Escriba su contraseña" class="input-field">
                            <% if (locals.errors?.password) { %>
                                <div class = "register-error-message"><%= errors.password.msg %></div>
                                <% } %>

                            <div class="row">
                                <input type="checkbox" checked>
                                <span>Estoy de acuerdo con los <a href="#">terminos y condiciones</a></span>
                            </div>
                            <button type="submit">Registrar mi cuenta</button>
                    </div>
                    </form>
                </div>
            </div>
    </body>

    </html>